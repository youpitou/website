<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
<div id="page">
	
<nav>
	<%= link_to "Home", root_path %> | 
	<%= link_to "About", about_path %> | 
	<%= link_to "News", news_path %> | 
	<%= link_to "Contact", contact_path %>
	<% if current_user && current_user.admin? %> | <%= link_to "Users", users_path %>
<% end %>
	<br/>
	<% if current_user %>
	Logged in as <%= current_user.email %><br/><%= link_to "Log out", logout_path%>
	<% else %>
	<%= link_to "Sign up", signup_path%> or <%= link_to "Log in", login_path%>
	<% end %>
</nav>


<div id="content">
<% flash.each do  |name, msg| %>
<%= content_tag :div, msg, :id => "flash_#{name}"%><br/>
<% end %>
		<%= yield %>
</div>

</div>


</body>
</html>
