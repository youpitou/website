<h1><%= @title %></h1>
<%= form_for @message, :url => contact_path do |f| -%>
	<div class="field">
		<%= f.label :name, "Name" %><br/>
		<%= f.text_field :name %><br/>
	</div>
	<div class="field">
		<%= f.label :email, "Email" %><br/>
		<%= f.text_field :email %><br/>
	</div>
	<div class="field">
		<%= f.label :subject, "Subject" %><br/>
		<%= f.text_field :subject %><br/>
	</div>
	<div class="field">
		<%= f.label :body, "Body" %><br/>
		<%= f.text_area :body, :size => "50x8" %><br/>
	</div>
	
	
	<%= f.submit "Submit"%>
  
<% end -%>
