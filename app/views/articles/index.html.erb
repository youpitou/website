<h1><%= @title %></h1>
<% if current_user && current_user.admin? %>
<%= button_to "New Article", new_article_path, :method => "get", :class => "button2 violet" %>
<% end %>
<br/>
<% @articles.each do |article| %>
<h2><%= article.title %></h2><br/>
Posted on <%= article.created_at.to_s(:dateformat) %> | <%= article.comments.count %> comments
<p><%= article.content.html_safe %></p>
 <%= link_to 'Show', article %>
<% if current_user && current_user.admin? %>
, <%= link_to 'Edit', edit_article_path(article) %> or <%= link_to 'Delete', article, confirm: 'Are you sure?', method: :delete %>
<% end %>
<br/><br/>
<% end %>

<br />
